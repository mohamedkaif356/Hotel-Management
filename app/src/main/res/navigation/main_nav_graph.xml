<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.wadachirebandi.ui.fragments.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/main_nav_graph"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splashFragment_to_villaFragment"
            app:destination="@id/villaFragment"
            app:popUpTo="@id/main_nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.wadachirebandi.ui.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_villaFragment"
            app:destination="@id/villaFragment"
            app:popUpTo="@id/main_nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/addEntryFragment"
        android:name="com.wadachirebandi.ui.fragments.AddEntryFragment"
        android:label="fragment_add_entry"
        tools:layout="@layout/fragment_add_entry">
        <argument
            android:name="villa_id"
            app:argType="string"
            android:defaultValue="101" />
        <argument
            android:name="villa_name"
            app:argType="string"
            android:defaultValue="101" />
    </fragment>
    <fragment
        android:id="@+id/villaFragment"
        android:name="com.wadachirebandi.ui.fragments.VillaFragment"
        android:label="fragment_villa"
        tools:layout="@layout/fragment_villa" >
        <action
            android:id="@+id/action_villaFragment_to_addEntryFragment"
            app:destination="@id/addEntryFragment" />
        <action
            android:id="@+id/action_villaFragment_to_editEntryFragment"
            app:destination="@id/editEntryFragment" />
    </fragment>
    <fragment
        android:id="@+id/editEntryFragment"
        android:name="com.wadachirebandi.ui.fragments.EditEntryFragment"
        android:label="fragment_edit_entry"
        tools:layout="@layout/fragment_edit_entry" />
</navigation>